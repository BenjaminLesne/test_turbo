{
  "extends": "@repo/typescript-config/tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "lib": ["ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [".eslintrc.cjs", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"],
  "exclude": ["node_modules"]
}
